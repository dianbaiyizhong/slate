<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sat="http://schemas.android.com/apk/res/hhm.slate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sb" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp" >

        <ImageView
            android:id="@+id/iv_sb_return"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/actionbar_return" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_pos" />

        <TextView
            android:id="@+id/tv_view_scene_current_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView1"
            android:text="@string/layout_actionbar_sb_text_1"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/no_color"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_scene"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/expand_tab_selector"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:textColor="@color/white1" />

        <Button
            android:id="@+id/btn_shotAndTake"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/expand_tab_selector"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:textColor="@color/white1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="105dp"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical" >

        <android.view.ext.SatelliteMenu
            android:id="@+id/menu_satellite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
              sat:closeOnClick="true"
    sat:expandDuration="500"
    sat:mainImage="@drawable/ic_launcher"
    sat:satelliteDistance="170dp"
    sat:totalSpacingDegree="90"
             >
        </android.view.ext.SatelliteMenu>
    </LinearLayout>



</FrameLayout>
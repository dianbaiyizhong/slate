<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/choose_eara_item_selector"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sb_shot_number_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="@color/white1"
            android:textSize="15sp" >
        </TextView>

        <TextView
            android:id="@+id/sb_shot_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="@color/white1"
            android:textSize="15sp"
            android:visibility="gone" >
        </TextView>

        <TextView
            android:id="@+id/sb_shot_shots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white1"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/sb_shot_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="@color/white1"
        android:textSize="15sp" >
    </TextView>
    
        <TextView
        android:id="@+id/sb_shot_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="@color/white1"
        android:textSize="15sp" >
    </TextView>

    <TextView
        android:id="@+id/sb_shot_id"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" >
    </TextView>

</LinearLayout>